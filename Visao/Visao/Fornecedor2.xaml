<Window x:Class="Visao.Fornecedor2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Visao"
        mc:Ignorable="d"
        Title="Fornecedor2" Height="700" Width="700">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <GroupBox Header="CADASTRAR FORNECEDOR" Grid.RowSpan="2" Margin="10,5,10,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock Text="NOME" HorizontalAlignment="Left" Margin="10,0,0,40"/>
                <TextBlock Text="DESCRIÇÃO" Grid.Row="1" HorizontalAlignment="Left" Margin="10,0,0,40"/>
                <TextBlock Text="VALIDADE" Grid.Row="2" HorizontalAlignment="Left" Margin="10,0,0,40"/>
                <TextBlock Text="QUANTIDADE" Grid.Row="3" HorizontalAlignment="Left" Margin="10,0,0,40"/>
                <TextBlock Text="PREÇO" Grid.Row="4" HorizontalAlignment="Left" Margin="10,0,0,40"/>
                <TextBox HorizontalAlignment="Left" VerticalAlignment="Top" Width="220" Margin="10,20,0,0" Height="40" Background="#FFE6E6E6" BorderBrush="{x:Null}"/>
                <TextBox HorizontalAlignment="Left" Grid.Row="1" VerticalAlignment="Top" Width="220" Margin="10,20,0,0" Height="40" Background="#FFE6E6E6" BorderBrush="{x:Null}"/>
                <TextBox HorizontalAlignment="Left" Grid.Row="2" VerticalAlignment="Top" Width="220" Margin="10,20,0,0" Height="40" Background="#FFE6E6E6" BorderBrush="{x:Null}"/>
                <TextBox HorizontalAlignment="Left" Grid.Row="3" VerticalAlignment="Top" Width="220" Margin="10,20,0,0" Height="40" Background="#FFE6E6E6" BorderBrush="{x:Null}"/>
                <TextBox HorizontalAlignment="Left" Grid.Row="4" VerticalAlignment="Top" Width="220" Margin="10,20,0,0" Height="40" Background="#FFE6E6E6" BorderBrush="{x:Null}"/>
                <Button Content="INSERIR PRODUTO" HorizontalAlignment="Left" VerticalAlignment="Center" Width="200" Height="40" Background="#FFE6E6E6" BorderBrush="#FF707070" Grid.Row="5" Margin="10,12,0,13"/>
                <Button Content="DELETAR PRODUTO" HorizontalAlignment="Left" VerticalAlignment="Center" Width="200" Height="40" Background="#FFE6E6E6" BorderBrush="#FF707070" Grid.Row="6" Margin="10,12,0,13"/>
                <Button Content="ATUALIZAR PRODUTO" HorizontalAlignment="Left" VerticalAlignment="Center" Width="200" Height="40" Background="#FFE6E6E6" BorderBrush="#FF707070" Grid.Row="7" Margin="10,12,0,13"/>
            </Grid>
        </GroupBox>
        <Grid Grid.Column="1" Margin="13,0,0,0">
            <TextBlock Text="Lista de fornecedores" FontSize="16" Margin="4,0,0,0"/>
            <DataGrid HorizontalAlignment="Center" Width="320" Margin="0,22,13,15"/>
        </Grid>
        <Button Content="FINALIZAR" HorizontalAlignment="Right" VerticalAlignment="Center" Width="200" Height="40" Background="#FFE6E6E6" BorderBrush="#FF707070" Grid.Row="1" Grid.Column="1" Margin="0,0,10,0"/>
    </Grid>
</Window>
