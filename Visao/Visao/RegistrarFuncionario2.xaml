<Window x:Class="Visao.RegistrarFuncionario2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Visao"
        mc:Ignorable="d"
        Title="RegistrarFuncionario2" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height=".6*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="NOME" HorizontalAlignment="Left" Margin="20,15,0,0"/>
        <TextBlock Text="EMAIL" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,15,0,0" />
        <TextBlock Text="TELEFONE" Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,15,0,0" />
        <TextBlock Text="CPF" Grid.Column="1"  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,15,0,0" />
        <TextBlock Text="NÉMERO CONTA" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,15,0,0" />
        <TextBlock Text="FORMAÇÃO" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,15,0,0" />
        <TextBox HorizontalAlignment="Left" VerticalAlignment="Top" Width="220" Margin="20,35,0,0" Height="35" Background="#FFE6E6E6" BorderBrush="{x:Null}"/>
        <TextBox HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Row="1" Width="220" Margin="20,35,0,0" Height="35" Background="#FFE6E6E6" BorderBrush="{x:Null}"/>
        <TextBox HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Row="2" Width="220" Margin="20,35,0,0" Height="35" Background="#FFE6E6E6" BorderBrush="{x:Null}"/>
        <TextBox HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1" Width="220" Margin="20,35,0,0" Height="35" Background="#FFE6E6E6" BorderBrush="{x:Null}"/>
        <TextBox HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Row="1" Grid.Column="1" Width="220" Margin="20,35,0,0" Height="35" Background="#FFE6E6E6" BorderBrush="{x:Null}"/>
        <TextBox HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Row="2" Grid.Column="1" Width="220" Margin="20,35,0,0" Height="35" Background="#FFE6E6E6" BorderBrush="{x:Null}"/>
        <Image Grid.Column="2" Grid.RowSpan="3"  Height="200" VerticalAlignment="Top" Width="220" Margin="0,10,0,0"/>
        <Button Content="ALTERAR FOTO" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Column="2" Grid.Row="2" Width="220" Height="40" Background="#FFE6E6E6" BorderBrush="#FF707070" Margin="0,40,0,0"/>
        <RadioButton Content="Gerente" HorizontalAlignment="Left" Margin="10,8,0,0" Grid.Row="3" VerticalAlignment="Top" FontSize="15"/>
        <RadioButton Content="Operador de caixa" HorizontalAlignment="Left" Margin="10,30,0,0" Grid.Row="3" VerticalAlignment="Top" FontSize="15"/>
        <Button Content="Confirmar" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="1" Grid.Row="4" Width="220" Height="40" Background="#FFE6E6E6" BorderBrush="#FF707070"/>


    </Grid>
</Window>
